<div class="container login-page">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <h1 class="text-center">Change your password</h1><br>
      <div class="row clearfix">
        <div class="col-md-4 col-md-offset-4 column">
          <%= form_for(:agency, :url => agencies_update_password_path ) do |f| %>
            <div class="form-group">
              <%= f.password_field :password, :autofocus => true, :required => "true", placeholder: "New Password", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, :required => "true", placeholder: "New Password confirmation", class: "form-control" %>
            </div>
            <div class="edit_actions">
              <%= f.button "Change my password", class: 'btn btn-default btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>