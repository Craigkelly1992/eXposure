<div class="container login-page">
	<div class="row clearfix">
		<div class="col-md-12 column">
			<h1 class="text-center">
				Change your password
			</h1>
			<br>
			<div class="row clearfix">
				<div class="col-md-4 col-md-offset-4 column">

				<%= form_for(:user, :url => update_password_path ) do |f| %>
				  <%= devise_error_messages! %>
				  <%= f.hidden_field :reset_password_token %>

				  <div><%= f.label :password, "New password" %><br />
				  <%= f.password_field :password, :autofocus => true, :required => "true" %></div>

				  <div><%= f.label :password_confirmation, "Confirm new password" %><br />
				  <%= f.password_field :password_confirmation, :required => "true" %></div>

				  <div class="edit_actions">
				  	<%= f.button "Change my password", class: 'btn btn-primary' %>
				  	<%= link_to "Back", edit_registration_path(current_user), class: "btn btn-default" %>
				  </div>
				<% end %>
				</div>
			</div>
		</div>
	</div>
</div>