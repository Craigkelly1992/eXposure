<%= form_for @notification, remote: true, :html => { :multipart => true } do |f| %>
<div class="modal-dialog modal-sm">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Notify <%= @winner.full_name %></h4>
    </div>
    <div class="modal-body">
        <div class="col-md-12">
          <%= image_tag (@notification.new_record? ? "ph.jpg" : @notification.image.url), class: "notification-image-sm", id: "upload-preview" %>
        
            <%= f.file_field :image, id: "picture-input", required: true, accept: "image/*" %>
            <%= link_to "Upload Picture", "javascript:void(0);", class: "btn btn-default", id: "upload-button" %>
        </div>
        <div class="col-md-12">
          <%= f.text_area :text, placeholder: "Message to #{@winner.full_name}", class: 'form-control notification-message-field' %>
          <%= f.hidden_field :type, value: "winner" %>
          <%= f.hidden_field :receiver_id, value: @winner.id %>
          <%= f.hidden_field :post_id, value: @post.id %>
        </div>
        
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <%= f.submit "Send", class: "btn btn-primary" %>
    </div>
  </div>
</div>
<% end %>