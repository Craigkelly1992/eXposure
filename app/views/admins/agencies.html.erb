<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <div class="page-header">
        <h1 class="text-center">Manage Agencies</h1>
      </div>
      <div class="pull-right"><%= will_paginate(@agencies, renderer: BootstrapPagination::Rails) %></div>
      <table class="table table-striped table-hover text-center">
        <thead>
          <tr>
            <th class="text-center">Company Name</th>
            <th class="text-center">Name</th>
            <th class="text-center">Email</th>
            <th class="text-center">Phone</th>
            <th colspan="2" class="text-center"></th>
          </tr>
        </thead>
        <tbody>
          <% @agencies.each do |agency| %>
          <tr>
            <td><%= agency.company_name %></td>
            <td class="text-center vertical-middle"><%= agency.full_name %></td>
            <td class="text-center vertical-middle"><%= agency.email %></td>
            <td class="text-center vertical-middle"><%= agency.phone %></td>
            <td class="text-center vertical-middle">
              <% if agency.enabled? %>
                <%= link_to "Disable", disable_agency_path(agency_id: agency.id, page: @agencies.current_page), class: "btn btn-default btn-xs btn-actions", method: :post %>
              <% else %>
                <%= link_to "Enable", enable_agency_path(agency_id: agency.id, page: @agencies.current_page), class: "btn btn-default btn-xs btn-actions", method: :post %>
              <% end %>
            </td>
            <td class="text-center vertical-middle">
              <%= link_to "Delete", delete_agency_path(agency_id: agency.id, page: @agencies.current_page), class: "btn btn-default btn-xs btn-actions", method: :delete, data: {confirm: "Are you sure?"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="pull-right">
        <%= will_paginate(@agencies, renderer: BootstrapPagination::Rails) %>
      </div>
    </div>
  </div>
</div>

<br>
