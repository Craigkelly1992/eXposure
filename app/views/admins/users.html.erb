<div class="container">
  <div class="row clearfix">
    <div class="col-md-12 column">
      <div class="page-header">
        <h1 class="text-center">Manage Users</h1>
      </div>
      <div class="pull-right">
        <%= will_paginate(@users, renderer: BootstrapPagination::Rails) %>
      </div>
      <table class="table table-striped table-hover text-center">
        <thead>
          <tr>
            <th class="text-center">Username</th>
            <th class="text-center">Name</th>
            <th class="text-center">Email</th>
            <th class="text-center">Phone</th>
            <th colspan="2" class="text-center"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td class="text-center vertical-middle"><%= user.full_name %></td>
            <td class="text-center vertical-middle"><%= user.email %></td>
            <td class="text-center vertical-middle"><%= user.phone %></td>
            <td class="text-center vertical-middle">
              <% if user.enabled? %>
                <%= link_to "Disable", disable_user_path(user_id: user.id, page: @users.current_page), class: "btn btn-default btn-xs btn-actions", method: :post %>
              <% else %>
                <%= link_to "Enable", enable_user_path(user_id: user.id, page: @users.current_page), class: "btn btn-default btn-xs btn-actions", method: :post %>
              <% end %>
            </td>
            <td class="text-center vertical-middle">
              <%= link_to "Delete", delete_user_path(user_id: user.id, page: @users.current_page), class: "btn btn-default btn-xs btn-actions", method: :delete, data: {confirm: "Are you sure?"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="pull-right">
        <%= will_paginate(@users, renderer: BootstrapPagination::Rails) %>
      </div>
    </div>
  </div>
</div>
